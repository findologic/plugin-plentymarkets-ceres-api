        </span>

        <span :class="'bg-appearance selected-filter reset-all' + ' '+ marginClasses" :style="marginInlineStyles" v-if="tagList.length >= 2" @click="resetAllTags()">
            {{ trans("Ceres::Template.itemFilterReset") }}
        </span>
    </div>
</script>
