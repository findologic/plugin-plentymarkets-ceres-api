<script type="x/template" id="vue-item-color-tiles">
    <div class="fl-item-color-tiles-container">
        <ul class="fl-item-color-tiles-list">
            <li class="fl-item-color-tiles-list-item" v-for="colorValue in facet.values">
                <label class="fl-color-tile-label" @click="tileClicked(colorValue.name)">
                    <div class="fl-color-tile-background" v-bind:style="{background: colorValue.hexValue}">
                        <img class="fl-color-tile-image"
                             v-show="colorValue.colorImageUrl"
                             :src="colorValue.colorImageUrl"/>
                        <img class="fl-color-tile-image"
                             v-show="!colorValue.colorImageUrl && !colorValue.hexValue"
                             src="{{ plugin_path("Findologic") }}/images/no-picture.jpg"/>
                        <div class="fl-color-tile-selected-image" v-show="isSelected(colorValue.name)">
                            <img src="https://cdn.findologic.com/login.symfony/web/autocomplete/img/selected.svg"/>
                        </div>
                    </div>
                </label>
            </li>
        </ul>
    </div>
</script>