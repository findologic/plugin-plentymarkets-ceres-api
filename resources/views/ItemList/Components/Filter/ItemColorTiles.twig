<!-- SSR:template(findologic-item-color-tiles) -->
<script type="x/template" id="vue-findologic-item-color-tiles">
    <div class="fl-item-color-tiles-container">
        <ul class="fl-item-color-tiles-list">
            <li class="fl-item-color-tiles-list-item" v-for="colorValue in facet.values">
                <label class="fl-color-tile-label" @click="tileClicked(colorValue.name)" rel="nofollow">
                    <div class="fl-color-tile-background" v-bind:style="{backgroundColor: colorValue.hexValue}" v-bind:title="colorValue.name">
                        <img class="fl-color-tile-image"
                             v-if="!colorValue.colorImageUrl && !colorValue.hexValue"
                             :src="fallbackImage"/>
                        <img class="fl-color-tile-image"
                             v-else-if="colorValue.colorImageUrl"
                             :src="colorValue.colorImageUrl"
                             @error="handleImageError($event, colorValue)"/>
                        <div class="fl-color-tile-selected-image" v-show="colorValue.selected">
                            <img class="fl-svg"
                                 data-src="https://cdn.findologic.com/login.symfony/web/autocomplete/img/selected.svg"
                                 data-fallback="https://cdn.findologic.com/login.symfony/web/autocomplete/img/selected.png"/>
                        </div>
                    </div>
                </label>
            </li>
        </ul>
    </div>
</script>
<!-- /SSR -->
