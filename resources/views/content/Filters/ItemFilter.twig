<script type="x/template" id="vue-findologic-item-filter">
    <div v-if="facet.name" class="card">
        <div class="h3">${facet.name}</div>
        <div v-if="facet.type === 'price'">
            <findologic-item-filter-price :facet="facet"></findologic-item-filter-price>
        </div>
        <div v-else>
            <div class="form-check" v-for="value in facets" :key="value.id">
                <input :id="'option-' + value.id" class="form-check-input hidden-xs-up" type="checkbox" :checked="isSelected(value)" @change="updateFacet(value)" :disabled="isLoading">
                <label :for="'option-' + value.id" class="form-check-label">
                    ${ value.name }
                </label>
                <div class="filter-badge">${ value.count }</div>
            </div>
        </div>
    </div>
</script>